const view = new URLSearchParams(window.location.search).get("v");
    // Get all sections that end in -mcd or -pcd
    const mcdSections = document.querySelectorAll('[id$="-mcd"]');
    const pcdSections = document.querySelectorAll('[id$="-pcd"]');
     if (view === "mcd") {
      mcdSections.forEach(section => section.setAttribute("style", "display: block !important"));
      pcdSections.forEach(section => section.setAttribute("style", "display: none !important"));
    } else {
      // Default or view=pcd
      mcdSections.forEach(section => section.setAttribute("style", "display: none !important"));
      pcdSections.forEach(section => section.setAttribute("style", "display: block !important"));
    }